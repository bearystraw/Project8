import pytest
import requests

BASE_URL = 'http://localhost:8000'

# ... (existing tests)

def test_create_keyval():
    response = requests.post(f'{BASE_URL}/keyval', json={'storage-key': 'new key', 'storage-val': 'new value'})
    assert response.status_code == 200
    assert response.json()['result'] is True

def test_read_keyval():
    response = requests.get(f'{BASE_URL}/keyval/new key')
    assert response.status_code == 200
    assert response.json()['storage-val'] == 'new value'

def test_update_keyval():
    response = requests.put(f'{BASE_URL}/keyval', json={'storage-key': 'new key', 'storage-val': 'updated value'})
    assert response.status_code == 200
    assert response.json()['storage-val'] == 'updated value'

def test_delete_keyval():
    response = requests.delete(f'{BASE_URL}/keyval/new key')
    assert response.status_code == 200
    assert response.json()['result'] is True

if __name__ == '__main__':
    pytest.main()
